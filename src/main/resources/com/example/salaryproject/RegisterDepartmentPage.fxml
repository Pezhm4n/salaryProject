<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" spacing="20" stylesheets="@department.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.salaryproject.RegisterDepartmentPageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Register New Department" styleClass="title">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label text="Department Name:" />
    <TextField fx:id="nameField" promptText="Enter department name" styleClass="text-field" />

    <Label text="Current Manager:" />
    <ComboBox fx:id="managerComboBox" promptText="Select manager" styleClass="combo-box" />

    <Button onAction="#handleRegister" text="Register" styleClass="register-button" />

    <Button onAction="#handleBack" text="Back" styleClass="back-button" />

    <Label fx:id="messageLabel" styleClass="message-label" />
</VBox>
