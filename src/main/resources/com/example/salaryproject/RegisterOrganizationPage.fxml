<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane prefWidth="400.0" prefHeight="555.0" fitToWidth="true" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.salaryproject.RegisterOrganizationPageController">
    <content>
        <VBox alignment="CENTER" spacing="20" stylesheets="@register-organization.css">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label text="Register New Organization" styleClass="title" alignment="CENTER">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <Label text="Organization Name:" alignment="CENTER" />
            <TextField fx:id="nameField" promptText="Enter organization name" styleClass="text-field" maxWidth="Infinity" />

            <Label text="Total Shares Outstanding:" alignment="CENTER" />
            <TextField fx:id="totalSharesField" promptText="Enter total shares" styleClass="text-field" maxWidth="Infinity" />

            <Label text="Shares Allocated for Employees:" alignment="CENTER" />
            <TextField fx:id="sharesAllocatedField" promptText="Enter shares allocated" styleClass="text-field" maxWidth="Infinity" />

            <Label text="Current Share Price:" alignment="CENTER" />
            <TextField fx:id="sharePriceField" promptText="Enter share price" styleClass="text-field" maxWidth="Infinity" />

            <Button onAction="#handleRegister" text="Register" styleClass="register-button" maxWidth="Infinity" />
            <Button onAction="#handleBack" text="Back" styleClass="back-button" maxWidth="Infinity" />

            <Label fx:id="messageLabel" styleClass="message-label" alignment="CENTER" />
        </VBox>
    </content>
</ScrollPane>
