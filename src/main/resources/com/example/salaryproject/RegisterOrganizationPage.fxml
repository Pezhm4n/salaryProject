<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" prefHeight="555.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.salaryproject.RegisterOrganizationPageController">
    <content>
        <VBox alignment="CENTER" spacing="20" styleClass="root" stylesheets="@css/common.css, @css/button.css, @css/form.css">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label alignment="CENTER" styleClass="title" text="Register New Organization">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <Label alignment="CENTER" text="Organization Name:" textFill="#787983" />
            <TextField fx:id="nameField" maxWidth="Infinity" promptText="Enter organization name" styleClass="text-field typing" />

            <Label alignment="CENTER" text="Total Shares Outstanding:" textFill="#787983" />
            <TextField fx:id="totalSharesField" maxWidth="Infinity" promptText="Enter total shares" styleClass="text-field typing" />

            <Label alignment="CENTER" text="Shares Allocated for Employees:" textFill="#787983" />
            <TextField fx:id="sharesAllocatedField" maxWidth="Infinity" promptText="Enter shares allocated" styleClass="text-field typing" />

            <Label alignment="CENTER" text="Current Share Price:" textFill="#787983" />
            <TextField fx:id="sharePriceField" maxWidth="Infinity" promptText="Enter share price" styleClass="text-field typing" />

            <Button focusTraversable="true" maxWidth="Infinity" onAction="#handleRegister" styleClass="register-button" text="Register" />
            <Button focusTraversable="true" maxWidth="Infinity" onAction="#handleBack" styleClass="back-button" text="Back" />

            <Label fx:id="messageLabel" alignment="CENTER" styleClass="message-label typing" />
        </VBox>
    </content>
</ScrollPane>
