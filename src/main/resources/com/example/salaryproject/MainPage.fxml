<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.salaryproject.MainPageController" stylesheets="@css/main.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="titleLabel" text="MAIN MENU" styleClass="title">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Button onAction="#handleRegisterAdmin" text="Register New Admin" styleClass="menu-button" focusTraversable="true" />

    <Button onAction="#handleRegisterOrganization" text="Register New Organization" styleClass="menu-button" focusTraversable="true" />

    <Button onAction="#handleEnterOrganization" text="Enter Organization" styleClass="menu-button" focusTraversable="true" />

    <Button onAction="#handleRandomGenerator" text="Random Generator" styleClass="menu-button" focusTraversable="true" />

    <Button onAction="#handleReports" text="Reports" styleClass="menu-button" focusTraversable="true" />

    <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" styleClass="menu-button" focusTraversable="true" />
</VBox>
