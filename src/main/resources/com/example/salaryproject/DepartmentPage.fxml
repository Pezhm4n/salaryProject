<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane prefWidth="400.0" prefHeight="555.0" fitToWidth="true" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.salaryproject.DepartmentPageController">
    <content>
        <VBox alignment="CENTER" spacing="20" stylesheets="@css/common.css, @css/button.css">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label text="Department" styleClass="title" alignment="CENTER">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <Label text="Department: " alignment="CENTER" />
            <Label fx:id="departmentNameLabel" styleClass="department-name" alignment="CENTER" />

            <Button onAction="#handleAddEmployee" text="Add Employee" styleClass="action-button" maxWidth="Infinity" focusTraversable="true"/>
            <Button onAction="#handleRemoveEmployee" text="Remove Employee" styleClass="action-button" maxWidth="Infinity" focusTraversable="true"/>
            <Button onAction="#handleGetEmployees" text="Get Employees" styleClass="action-button" maxWidth="Infinity" focusTraversable="true"/>
            <Button onAction="#handleGetEmployeeByNationalId" text="Get Employee by National ID" styleClass="action-button" maxWidth="Infinity" focusTraversable="true"/>
            <Button onAction="#handleMergeInto" text="Merge Into" styleClass="action-button" maxWidth="Infinity" focusTraversable="true"/>
            <Button onAction="#handleSplitInto" text="Split Into" styleClass="action-button" maxWidth="Infinity" focusTraversable="true"/>
            <Button onAction="#handleActivate" text="Activate" styleClass="action-button" maxWidth="Infinity" focusTraversable="true"/>
            <Button onAction="#handleDeactivate" text="Deactivate" styleClass="action-button" maxWidth="Infinity" focusTraversable="true"/>
            <Button onAction="#handleBack" text="Back" styleClass="back-button" maxWidth="Infinity" focusTraversable="true"/>
        </VBox>
    </content>
</ScrollPane>
