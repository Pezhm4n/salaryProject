<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" prefHeight="555.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.salaryproject.DepartmentPageController">
    <content>
        <VBox alignment="CENTER" spacing="20" styleClass="root" stylesheets="@css/common.css, @css/button.css">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label alignment="CENTER" styleClass="title" text="Department">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <Label alignment="CENTER" text="Department: " textFill="#787983" />
            <Label fx:id="departmentNameLabel" alignment="CENTER" styleClass="department-name" />

            <Button focusTraversable="true" maxWidth="Infinity" onAction="#handleAddEmployee" styleClass="action-button" text="Add Employee" />
            <Button focusTraversable="true" maxWidth="Infinity" onAction="#handleRemoveEmployee" styleClass="action-button" text="Remove Employee" />
            <Button focusTraversable="true" maxWidth="Infinity" onAction="#handleGetEmployees" styleClass="action-button" text="Get Employees" />
            <Button focusTraversable="true" maxWidth="Infinity" onAction="#handleGetEmployeeByNationalId" styleClass="action-button" text="Get Employee by National ID" />
            <Button focusTraversable="true" maxWidth="Infinity" onAction="#handleMergeInto" styleClass="action-button" text="Merge Into" />
            <Button focusTraversable="true" maxWidth="Infinity" onAction="#handleSplitInto" styleClass="action-button" text="Split Into" />
            <Button focusTraversable="true" maxWidth="Infinity" onAction="#handleActivate" styleClass="action-button" text="Activate" />
            <Button focusTraversable="true" maxWidth="Infinity" onAction="#handleDeactivate" styleClass="action-button" text="Deactivate" />
            <Button focusTraversable="true" maxWidth="Infinity" onAction="#handleBack" styleClass="back-button" text="Back" />
        </VBox>
    </content>
</ScrollPane>
