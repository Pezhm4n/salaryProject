<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" spacing="20" stylesheets="@department-page.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.salaryproject.DepartmentPageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Department" styleClass="title">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label text="Department: " />
    <Label fx:id="departmentNameLabel" styleClass="department-name" />

    <Button onAction="#handleAddEmployee" text="Add Employee" styleClass="action-button" />
    <Button onAction="#handleRemoveEmployee" text="Remove Employee" styleClass="action-button" />
    <Button onAction="#handleGetEmployees" text="Get Employees" styleClass="action-button" />
    <Button onAction="#handleGetEmployeeByNationalId" text="Get Employee by National ID" styleClass="action-button" />
    <Button onAction="#handleMergeInto" text="Merge Into" styleClass="action-button" />
    <Button onAction="#handleSplitInto" text="Split Into" styleClass="action-button" />
    <Button onAction="#handleActivate" text="Activate" styleClass="action-button" />
    <Button onAction="#handleDeactivate" text="Deactivate" styleClass="action-button" />
    <Button onAction="#handleBack" text="Back" styleClass="back-button" />
</VBox>
