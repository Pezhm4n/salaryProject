<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" spacing="20" stylesheets="@organization-selection.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.salaryproject.OrganizationSelectionController">
    <Label styleClass="title" text="Select Organization" />
    <ListView fx:id="organizationListView" prefHeight="200.0" prefWidth="200.0" styleClass="list-view" />
    <Button onAction="#handleOrganizationSelection" text="Select Organization" styleClass="select-button" />
    <Button onAction="#handleBack" text="Back" styleClass="back-button" />
</VBox>
