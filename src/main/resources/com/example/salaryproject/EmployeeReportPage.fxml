<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane prefWidth="400.0" prefHeight="555.0" fitToWidth="true" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.salaryproject.EmployeeReportPageController">
    <content>
        <VBox alignment="CENTER" spacing="20" styleClass="root" stylesheets="@css/common.css, @css/button.css">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label text="Employee Reports" styleClass="title" alignment="CENTER">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <Button onAction="#generateEmployeePerformanceReport" text="Employee Performance Report" styleClass="report-button" maxWidth="Infinity" focusTraversable="true" />
            <Button onAction="#employeeSalaryRecordsReport" text="Employee Salary Records Report" styleClass="report-button" maxWidth="Infinity" focusTraversable="true" />
            <Button onAction="#generateEmployeeTypeReport" text="Employee Type Report" styleClass="report-button" maxWidth="Infinity" focusTraversable="true" />
            <Button onAction="#generateEmployeeTypeChangeReport" text="Employee Type Change Report" styleClass="report-button" maxWidth="Infinity" focusTraversable="true" />
            <Button onAction="#generateEmployeeStatusReport" text="Employee Status Report" styleClass="report-button" maxWidth="Infinity" focusTraversable="true" />
            <Button onAction="#generateEmployeeStatusChangeReport" text="Employee Status Change Report" styleClass="report-button" maxWidth="Infinity" focusTraversable="true" />
            <Button onAction="#generateEmployeePromotionReport" text="Employee Promotion Report" styleClass="report-button" maxWidth="Infinity" focusTraversable="true" />
            <!-- Add more employee report buttons as needed -->

            <Button fx:id="backButton" onAction="#handleBack" text="Back" styleClass="back-button" maxWidth="Infinity" />
        </VBox>
    </content>
</ScrollPane>
