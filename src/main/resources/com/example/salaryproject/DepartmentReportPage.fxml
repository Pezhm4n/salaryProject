<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" stylesheets="@css/common.css, @css/button.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.salaryproject.DepartmentReportPageController" prefHeight="600.0" prefWidth="800.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Department Reports" styleClass="title">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <Button onAction="#generateDepartmentPerformanceReport" text="Department Performance Report" styleClass="report-button" focusTraversable="true" maxWidth="Infinity" />
    <Button onAction="#generateDepartmentActionReport" text="Department Action Report" styleClass="report-button" focusTraversable="true" maxWidth="Infinity" />
    <Button onAction="#generateEmployeesReport" text="Employees Report" styleClass="report-button" focusTraversable="true" maxWidth="Infinity" />
    <Button onAction="#generateManagersReport" text="Managers Report" styleClass="report-button" focusTraversable="true" maxWidth="Infinity" />

    <Button fx:id="backButton" onAction="#handleBack" text="Back" styleClass="back-button" focusTraversable="true" maxWidth="Infinity" />
</VBox>
