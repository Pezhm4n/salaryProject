<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.salaryproject.AddEmployeePageController">
    <Label text="First Name:" />
    <TextField fx:id="firstNameField" />

    <Label text="Last Name:" />
    <TextField fx:id="lastNameField" />

    <Label text="National ID:" />
    <TextField fx:id="nationalIdField" />

    <Label text="Date of Birth:" />
    <DatePicker fx:id="dateOfBirthPicker" />

    <Label text="Email:" />
    <TextField fx:id="emailField" />

    <Label text="Phone Number:" />
    <TextField fx:id="phoneNumberField" />

    <Button onAction="#handleAddEmployee" text="Add Employee" />
</VBox>
