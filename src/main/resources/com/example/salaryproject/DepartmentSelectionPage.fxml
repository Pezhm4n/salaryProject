<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="20" stylesheets="@department-selection.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.salaryproject.DepartmentSelectionController">
    <Label styleClass="title" text="Select Department" />
    <ListView fx:id="departmentListView" prefHeight="200.0" prefWidth="200.0" styleClass="list-view" />
    <Button onAction="#handleDepartmentSelection" text="Select Department" styleClass="select-button" focusTraversable="true"/>
    <Button onAction="#handleBack" text="Back" styleClass="back-button" focusTraversable="true"/>
</VBox>
