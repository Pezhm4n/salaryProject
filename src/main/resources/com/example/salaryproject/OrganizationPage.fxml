<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.salaryproject.OrganizationPageController" stylesheets="@css/organization.css">
    <Label text="Organization" styleClass="title"/>
    <Label fx:id="organizationNameLabel" styleClass="organization-name"/>

    <Button onAction="#handleRegisterDepartment" text="Register New Department" styleClass="action-button" focusTraversable="true"/>
    <Button onAction="#handleEnterDepartment" text="Enter Department" styleClass="action-button" focusTraversable="true"/>
    <Button onAction="#handleBack" text="Back" styleClass="back-button" focusTraversable="true"/>
</VBox>
